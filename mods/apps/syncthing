#!/bin/bash

##### Time Zone: America/New_York
##### Config Path: /pg/appdata/syncthing
##### DataPath 1: /pg/data/syncthing/data1
##### DataPath 2: /pg/data/syncthing/data2
##### Verison Tag: latest

deploy_container() {

    # Specify config file path and source information
    config_path="/pg/config/${app_name}.cfg"
    source "$config_path"

    docker run -d \
      --name="${app_name}" \
      -e PUID=1000 \
      -e PGID=1000 \
      -e TZ="${time_zone}" \
      -p 8384:8384 \
      -p 22000:22000/tcp \
      -p 22000:22000/udp \
      -p 21027:21027/udp \
      -v "${config_path}":/config \
      -v "${datapath_1}":/data1 \
      -v "${datapath_2}":/data2 \
      --restart unless-stopped \
      lscr.io/linuxserver/syncthing:"${version_tag}"
    
    # Verify the Docker container is running
    docker ps | grep "$app_name"
}
