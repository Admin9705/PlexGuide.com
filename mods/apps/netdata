#!/bin/bash

# Default Port: 19999

##### Port Number: 19999
##### Time Zone: America/New_York

# Parse and store default values
parse_and_store_defaults "$1"

# Specify the config file path
config_path="/pg/config/$1.cfg"

# Source the configuration file to get the appdata_path and app_name
if [[ -f "$config_path" ]]; then
    source "$config_path"
else
    echo "Error: Configuration file not found at $config_path."
    exit 1
fi

# Deploy Netdata with the updated paths
docker run -d --name="$app_name" \
  -p "${port_number}":19999 \
  -v "${appdata_path}"/netdataconfig:/etc/netdata \
  -v "${appdata_path}"/netdatalib:/var/lib/netdata \
  -v "${appdata_path}"/netdatacache:/var/cache/netdata \
  -v /etc/passwd:/host/etc/passwd:ro \
  -v /etc/group:/host/etc/group:ro \
  -v /proc:/host/proc:ro \
  -v /sys:/host/sys:ro \
  -v /etc/os-release:/host/etc/os-release:ro \
  --cap-add SYS_PTRACE \
  --security-opt apparmor=unconfined \
  netdata/netdata

# Verify the Docker container is running
docker ps | grep "$app_name"
